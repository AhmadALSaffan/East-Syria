<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <View
        android:id="@+id/statusBarSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.35">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore East Syria"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />


        <View
            android:layout_width="120dp"
            android:layout_height="4dp"
            android:background="@color/orange_accent"
            android:layout_marginTop="8dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ancient Wonders Await"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2dp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover the hidden gems of the Euphrates, from the majestic suspension bridge to the timeless history of Dura-Europos."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:alpha="0.9"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="16dp" />


        <Button
            android:id="@+id/btnStartJourney"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Start Journey"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_background_orange"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/white"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginTop="32dp"
            android:elevation="4dp"
            android:stateListAnimator="@null" />

        <!-- Explore Nearby Button -->
        <Button
            android:id="@+id/btnExploreNearby"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Explore Nearby"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_background_transparent"
            android:drawableStart="@drawable/ic_map_outlined"
            android:drawableTint="@color/white"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginTop="16dp"
            android:stateListAnimator="@null" />

        <!-- Footer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <!-- Language Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_globe"
                    android:tint="@color/white"
                    android:alpha="0.8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available in Arabic &amp; English"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:alpha="0.8"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Official Guide Badge -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_verified"
                    android:tint="@color/white"
                    android:alpha="0.8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Official Guide"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:alpha="0.8"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Night Mode Toggle FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNightMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_moon"
        app:tint="@color/white"
        app:backgroundTint="@color/brown_dark"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:contentDescription="Toggle night mode" />

</androidx.constraintlayout.widget.ConstraintLayout>
