<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Section Header (RECENT, EARLIER) -->
    <TextView
        android:id="@+id/tvSectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RECENT"
        android:textColor="#8A8A8A"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:visibility="gone"/>

    <!-- Notification Item -->
    <LinearLayout
        android:id="@+id/notificationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/notification_background">

        <!-- Icon Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivNotificationIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_map"
                android:tint="#FFA726"/>
        </androidx.cardview.widget.CardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNotificationTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="New Landmark Added: Mari Ancient City"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNotificationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2m ago"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvNotificationDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A new historical site is now available for exploration in the eastern region."
                android:textColor="#B0B0B0"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>


        <View
            android:id="@+id/unreadIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_orange"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:visibility="visible"/>
    </LinearLayout>

    <!-- Featured Card (for special notifications) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/featuredCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/ivFeaturedImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW ARRIVAL"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="#FFA726"
                android:padding="8dp"
                android:layout_margin="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tvFeaturedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discover Mari Ancient City"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gradient_bottom"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
